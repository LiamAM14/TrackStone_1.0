<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BrowseDecksActivity"
    android:background="#202732">

    <Button
        android:id="@+id/buttonCreateDeck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/frameLayoutRecyclerViewDecks"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_button"
        android:minHeight="48dp"
        android:text="@string/createDeck"
        android:textColor="#202732" />

    <FrameLayout
        android:id="@+id/frameLayoutRecyclerViewDecks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#202732">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewDecks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

</RelativeLayout>