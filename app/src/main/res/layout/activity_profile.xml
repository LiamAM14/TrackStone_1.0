<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/profileDetail"
        android:layout_width="215dp"
        android:layout_height="244dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="179dp"
        android:layout_height="37dp"
        app:layout_constraintBottom_toTopOf="@+id/profileDetail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profileDetail1"
        android:layout_width="219dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileDetail" />

    <TextView
        android:id="@+id/profileDetail2"
        android:layout_width="219dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileDetail1" />

    <TextView
        android:id="@+id/profileDetail3"
        android:layout_width="219dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileDetail2" />

    <Button
        android:id="@+id/Change1"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:layout_marginBottom="20dp"
        android:background="@color/black"
        android:text="Change"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/Change2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileDetail1"
        app:layout_constraintTop_toTopOf="@+id/profileDetail1"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/Change2"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:background="@color/black"
        android:text="Change"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileDetail2"
        app:layout_constraintTop_toTopOf="@+id/profileDetail2" />

    <Button
        android:id="@+id/Change3"
        android:layout_width="103dp"
        android:layout_height="37dp"
        android:background="@color/black"
        android:text="Change"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileDetail3"
        app:layout_constraintTop_toTopOf="@+id/profileDetail3" />

    <Button
        android:id="@+id/deleteUser"
        android:layout_width="141dp"
        android:layout_height="48dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="32dp"
        android:background="@color/black"
        android:text="Delete user"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileDetail3" />
</androidx.constraintlayout.widget.ConstraintLayout>